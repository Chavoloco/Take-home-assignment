{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES5",
    "module": "commonjs",
    "lib": [
      "ES5",
      "DOM"
    ],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "./support/commands.d.ts",
      "cypress"
    ]
  },
  "include": [
    "src/**/*.ts",
    "*.js"
  ],
  "exclude": [
    "node_modues"
  ]
}